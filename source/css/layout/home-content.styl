.home-content-container {
  background var(--background-color-1)


  .home-article-list {

    .home-article-item {
      position relative

      keep-container(var(--home-post-hover-scale), 0, 2.8rem)

      .post-sticky-box {
        position absolute
        z-index $z-index-1
        display flex
        align-items center
        box-sizing border-box
        padding 0.1rem 0.4rem
        color var(--text-color-4)
        font-size 12px
        letter-spacing 1px
        background var(--background-color-3)
        border-radius 0.3rem
        transform scale(0.86)
        cursor default
        disable-user-select()

        &.cover {
          top 0.6rem
          right 0.6rem
        }

        &.card {
          top 0.8rem
          right 0.8rem
        }

        +keep-mobile() {
          padding 0
          background none
          transform rotate(45deg)

          .sticky-name {
            display none
          }
        }
      }


      .home-article-item-top {
        width 100%
        overflow hidden
        background-color var(--background-color-2)
        border-top-left-radius var(--box-border-radius)
        border-top-right-radius var(--box-border-radius)

        +keep-tablet() {
          height 7rem
        }

        +keep-mobile() {
          height 6rem
        }

        .home-cover {
          width 100%
          height 100%
          object-fit cover
          transform-origin center center
          transition-t("transform", "0", "1", "linear")

          &:hover {
            transform scale(1.03)
          }
        }
      }


      .home-article-item-bottom {
        padding 2rem

        .sticky-icon {
          position absolute
          top 1.2rem
          right 1.2rem
          color var(--text-color-4)
          font-size 1.2rem
          transform rotate(45deg)
        }


        .home-article-title {
          margin 0
          color var(--text-color-2)
          font-weight 600
          font-size 1.4rem
          line-height 1.5


          +keep-tablet() {
            font-size 1.3rem
          }


          +keep-mobile() {
            font-size 1.2rem
          }
        }


        .home-article-content {
          margin 1.8rem 0
          color var(--text-color-3)
          text-align justify
          word-wrap break-word
        }
      }
    }
  }
}
