$friend-link-item-height = 5.2rem
$friend-link-item-height-tablet = 4.2rem
$friend-link-item-border-radius = 0.6rem

.page-template-container {
  keep-container(1, 2rem, 2rem)

  .page-template-content {
    color var(--text-color-3)

    h1
    h2
    h3
    h4
    h5
    h6 {

      &:first-child {
        margin-top 0
      }
    }
  }


  if (hexo-config('menu.Links')) {

    .friends-link-list {
      display grid
      grid-gap 1.2rem
      grid-template-columns repeat(2, 1fr)

      .link-type-title {
        grid-column span 2
        margin-top 0.5rem
        color var(--text-color-3)
        font-size 1.3rem

        i.fa-solid {
          color var(--text-color-3)
        }
      }


      +keep-tablet() {
        grid-gap 1.1rem

        .link-type-title {
          margin-top 0.4rem !important
          font-size 1.1rem !important
        }

        .friends-link-item {
          height $friend-link-item-height-tablet !important

          .a-wrap {

            .avatar {
              width $friend-link-item-height-tablet !important

              i.icon {
                font-size 1.6rem !important
              }
            }

            .details {
              padding 0.6rem 0.8rem !important

              .name {
                font-size 1.1rem !important
              }

              .desc {
                font-size 0.9rem !important
              }
            }
          }
        }
      }


      +keep-mobile() {
        grid-gap 1rem !important
        grid-template-columns repeat(1, 1fr) !important

        .link-type-title {
          grid-column span 1 !important
        }
      }


      .friends-link-item {
        width 100%
        height $friend-link-item-height
        overflow hidden
        border-radius $friend-link-item-border-radius
        box-shadow 1px 1px 3px var(--shadow-color)
        cursor pointer

        &:hover {
          box-shadow 1px 1px 6px var(--shadow-color)

          .avatar {
            img {
              transform scale(1.12)
            }
          }
        }


        .a-wrap {
          display flex
          justify-content space-between
          width 100%
          height 100%

          .avatar {
            flex-shrink 0
            width $friend-link-item-height
            height 100%
            overflow hidden
            background-color var(--background-color-2)

            img {
              position absolute
              top 0
              left 0
              width 100%
              height 100%
              object-fit cover
              background-color var(--background-color-2)
              transform-origin center center
              transition-t("transform", "0.1", "0.8", "linear")
            }


            i.icon {
              color var(--text-color-4)
              font-size 1.8rem
            }
          }


          .details {
            display flex
            flex-direction column
            justify-content space-between
            width 100%
            height 100%
            padding 0.8rem 1rem

            .name {
              width 100%
              color var(--text-color-3)
              font-size 1.2rem
            }


            .desc {
              width 100%
              margin-top 0.4rem
              color var(--text-color-4)
              font-size 1rem
            }
          }
        }
      }
    }
  }
}
